{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "http://github.com/louisjordan/algorithm-visualiser/tree/main/av-tracer/src/trace.schema.json",
    "title": "Trace",
    "description": "Algorithm Visualiser Trace Schema",
    "type": "object",
    "properties": {
        "breakpoints": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string"
                },
                "line": {
                    "type": "number"
                },
                "state": {
                    "type": "object"
                }
            },
            "required": [
                "type",
                "line",
                "state"
            ]
        }
    },
    "required": [
        "breakpoints"
    ]
}
